*/
    });
    //-- Clear Chat
    resetChat();

    //-- Print Messages
    insertChat("me", "Hello Tom...", 0);  
    insertChat("you", "Hi, Pablo", 500);
    insertChat("me", "What would you like to talk about today?", 1000);
    insertChat("you", "Tell me a joke",1500);
