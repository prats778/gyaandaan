<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png">
  <link rel="icon" type="image/png" href="/img/favicon.png">
  <title>
    Material Dashboard 2 by Creative Tim
  </title>
  <!-- CSS only -->
  <link id="pagestyle" href="/css/material-dashboard.css?v=3.0.0" rel="stylesheet" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>

    <div class="d-flex justify-content-center mt-3">
        <h2>View and add schedule</h2>
    </div>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3"> 
                            Select your classes under: <%= mentor %>  
                        </h6>
                        <b class="text-white text-capitalize ps-3"></b>
                    </div>
                </div>
            </div>

            <div class="container justify-contents-center mt-3">
                <% let url="/pages/confirm_schedule?mentor=" +mentor+ "&mentee=" +mentee%>
              <form class="col-8 m-auto" action="/pages/confirm_schedule" method="POST">
                  <div class="form-group mb-1">
                    <label for="class">Select two or more classes</label>
                    <select name="class" multiple class="form-control" id="class">
                         <% for(let i=0;i<classes.length;i++){ %>
                             <option value="<%=classes[i].id%>"><%=classes[i].content%></option>
                          <% } %>   
                    </select>
                  </div>                   
                  <button type="submit" class="btn btn-primary">Confirm & Join</button>
                </form>
          </div>

        </div>
    </div>

    <!--   Core JS Files   -->
  <script src="/js/core/popper.min.js"></script>
  <!--
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="/js/plugins/chartjs.min.js"></script> -->
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>